<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Z&H Market</title>
    <link rel="stylesheet" href="/css/index.css" />
    <link
      href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
      rel="stylesheet"
    />
    <script src="/js/carousel.js" defer></script>
  </head>
  <body onload="CartFunction(),cartLen(), logedUser()">
    <%- include('components/nav') %> <% if (offers.length > 0) { %>
    <div class="wrapper">
      <i id="left" class="bx bx-chevron-left"></i>
      <div class="carousel">
        <% offers.forEach(offer => { %>
        <a href="/product/show/<%= offer.product %>">
          <img src="<%= offer.image %>" draggable="false"
        /></a>
        <% }) %>
      </div>
      <i id="right" class="bx bx-chevron-right"></i>
    </div>
    <% } %>
    <div class="container">
      <% for(var i = 0; i < category.length; i++) { %>
      <div class="categories">
        <a href="/<%=category[i].name%>">
          <img
            src="<%=category[i].image%><%=category[i].name%>.png"
            alt="<%=category[i].name%>"
          />
          <p><%= category[i].name %></p>
        </a>
      </div>
      <% } %>
      <div id="test"></div>
    </div>
    <script>
      function CartFunction() {
        if (!localStorage.getItem("cart")) {
          localStorage.setItem("cart", "[]");
        }
        if (!localStorage.getItem("Token")) {
          localStorage.setItem("Token", "noToken");
        }
        if (!localStorage.getItem("State")) {
          localStorage.setItem("State", "noState");
        }
      }
    </script>
  </body>
</html>
