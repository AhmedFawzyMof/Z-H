<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= order.id %></title>
    <link rel="stylesheet" href="/css/admin/order.css" />
    <link
      href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
      rel="stylesheet"
    />
    <style>
      .title {
        width: 100%;
        color: #33333346;
        display: grid;
        place-items: center;
        margin: 5px 0;
      }
      .table {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        place-items: center;
        border: 1px solid #333;
      }
    </style>
  </head>
  <body>
    <div
      class="container"
      style="display: grid; place-content: center; place-items: center"
    >
      <div class="orderRec" style="position: relative">
        <img src="/img/print.jpeg" style="width: 100%" />
        <p>رقم الطلب : <%=order.id.substr(24, 25)%></p>

        <div
          class="p"
          style="
            display: grid;
            grid-template-columns: 30% 70%;
            place-items: center;
            border: 1px solid #333;
          "
        >
          <p
            style="
              border-left: 1px solid #333;
              width: 100%;
              display: grid;
              place-items: center;
            "
          >
            المستخدم
          </p>
          <p><%=order.username%></p>
        </div>
        <div
          class="p"
          style="
            display: grid;
            grid-template-columns: 30% 70%;
            place-items: center;
            border: 1px solid #333;
          "
        >
          <p
            style="
              border-left: 1px solid #333;
              width: 100%;
              display: grid;
              place-items: center;
            "
          >
            رقم الهاتف
          </p>
          <p><%=order.phone%></p>
        </div>
        <div
          class="p"
          style="
            display: grid;
            grid-template-columns: 30% 70%;
            place-items: center;
            border: 1px solid #333;
          "
        >
          <p
            style="
              border-left: 1px solid #333;
              width: 100%;
              display: grid;
              place-items: center;
            "
          >
            هاتف اخر
          </p>
          <p><%=order.spare_phone%></p>
        </div>
        <div
          class="p"
          style="
            display: grid;
            grid-template-columns: 30% 70%;
            place-items: center;
            border: 1px solid #333;
          "
        >
          <p
            style="
              border-left: 1px solid #333;
              width: 100%;
              display: grid;
              place-items: center;
            "
          >
            شارع
          </p>
          <p><%=order.addrSt%></p>
        </div>
        <div
          class="p"
          style="
            display: grid;
            grid-template-columns: 30% 70%;
            place-items: center;
            border: 1px solid #333;
          "
        >
          <p
            style="
              border-left: 1px solid #333;
              width: 100%;
              display: grid;
              place-items: center;
            "
          >
            عماره
          </p>
          <p><%=order.addrB%></p>
        </div>
        <div
          class="p"
          style="
            display: grid;
            grid-template-columns: 30% 70%;
            place-items: center;
            border: 1px solid #333;
          "
        >
          <p
            style="
              border-left: 1px solid #333;
              width: 100%;
              display: grid;
              place-items: center;
            "
          >
            طابق
          </p>
          <p><%=order.addrF%></p>
        </div>
        <div
          class="p"
          style="
            display: grid;
            grid-template-columns: 30% 70%;
            place-items: center;
            border: 1px solid #333;
          "
        >
          <p
            style="
              border-left: 1px solid #333;
              width: 100%;
              display: grid;
              place-items: center;
            "
          >
            تاريخ الطلب
          </p>
          <p id="date">
            <%= order.date.getFullYear()%>-<%= order.date.getMonth()+1%>-<%=
            order.date.getDate() %> <%= order.date.getHours() %>:<%=
            order.date.getMinutes() %>:<%= order.date.getSeconds() %>
          </p>
        </div>
        <h3 class="title"></h3>
        <table>
          <tr
            style="
              display: grid;
              grid-template-columns: repeat(4, 1fr);
              place-items: center;
            "
          >
            <th style="border: 1px solid #333; width: 100%">المنتج</th>
            <th style="border: 1px solid #333; width: 100%">الكمية</th>
            <th style="border: 1px solid #333; width: 100%">السعر</th>
            <th style="border: 1px solid #333; width: 100%">إجمالي</th>
          </tr>
          <% order.cart.forEach(item => { %>
          <tr
            style="
              display: grid;
              grid-template-columns: repeat(4, 1fr);
              place-items: center;
            "
          >
            <td
              style="
                width: 100%;
                height: 100%;
                display: grid;
                place-items: center;
                border: 1px solid #333;
              "
            >
              <%= item.name %>
            </td>
            <td
              style="
                width: 100%;
                height: 100%;
                display: grid;
                place-items: center;
                border: 1px solid #333;
              "
            >
              <%= item.quantity %>
            </td>
            <td
              style="
                width: 100%;
                height: 100%;
                display: grid;
                place-items: center;
                border: 1px solid #333;
              "
            >
              <%= item.price %>
            </td>
            <td
              style="
                width: 100%;
                height: 100%;
                display: grid;
                place-items: center;
                border: 1px solid #333;
              "
            >
              <%= item.price * item.quantity %>
            </td>
          </tr>
          <% }) %>
        </table>
        <div
          class="p"
          style="
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            place-items: center;
            border: 1px solid #333;
          "
        >
          <p
            style="
              border-left: 1px solid #333;
              width: 100%;
              display: grid;
              place-items: center;
              grid-column: 1/2;
            "
          >
            سعر التوصيل
          </p>
          <p
            style="
              width: 100%;
              display: grid;
              place-items: center;
              grid-column: 2/4;
            "
          >
            20 ج
          </p>
        </div>
        <div
          class="p"
          style="
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            place-items: center;
            border: 1px solid #333;
          "
        >
          <p
            style="
              border-left: 1px solid #333;
              width: 100%;
              display: grid;
              place-items: center;
              grid-column: 1/2;
            "
          >
            الإجمالي
          </p>
          <p
            style="
              width: 100%;
              display: grid;
              place-items: center;
              grid-column: 2/4;
            "
          >
            <%= order.total %> ج
          </p>
        </div>
        <div
          class="p"
          style="
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            place-items: center;
            border: 1px solid #333;
          "
        >
          <p
            style="
              border-left: 1px solid #333;
              width: 100%;
              display: grid;
              place-items: center;
              grid-column: 1/2;
            "
          >
            طريقة الدفع
          </p>
          <p
            style="
              width: 100%;
              display: grid;
              place-items: center;
              grid-column: 2/4;
            "
          >
            <%= order.method %>
          </p>
        </div>
        <div
          class="p"
          style="
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            place-items: center;
            border: 1px solid #333;
          "
        >
          <p
            style="
              border-left: 1px solid #333;
              width: 100%;
              display: grid;
              place-items: center;
              grid-column: 1/2;
            "
          >
            مدينة
          </p>
          <p
            style="
              width: 100%;
              display: grid;
              place-items: center;
              grid-column: 2/4;
            "
          >
            <%= order.city %>
          </p>
        </div>
        <% if (order.method == 'cashback') { %>
        <div
          class="p"
          style="
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            place-items: center;
            border: 1px solid #333;
          "
        >
          <p
            style="
              border-left: 1px solid #333;
              width: 100%;
              display: grid;
              place-items: center;
              grid-column: 1/2;
            "
          >
            تخفيض
          </p>
          <p
            style="
              width: 100%;
              display: grid;
              place-items: center;
              grid-column: 2/4;
            "
          >
            <%= JSON.parse(order.discount).value %>
          </p>
        </div>
        <% } else { %>
        <div
          class="p"
          style="
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            place-items: center;
            border: 1px solid #333;
          "
        >
          <p
            style="
              border-left: 1px solid #333;
              width: 100%;
              display: grid;
              place-items: center;
              grid-column: 1/2;
            "
          >
            تخفيض
          </p>
          <div
            style="
              width: 100%;
              grid-column: 2/4;
              display: flex;
              align-items: center;
              justify-content: space-evenly;
            "
          >
            <p>الكود: <%= JSON.parse(order.discount).code %></p>
            <p>القيمة: <%= JSON.parse(order.discount).value %></p>
          </div>
        </div>
        <% } %>
      </div>
    </div>
    <script>
      document.addEventListener("DOMContentLoaded", () => {
        print();
      });
    </script>
    <script src="/js/admin/order.js"></script>
  </body>
</html>
