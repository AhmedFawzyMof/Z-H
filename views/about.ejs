      </div>
    </div>
    <%- include('components/footer') %>
    <script>
      const Q = document.querySelectorAll(".Qut");
      Q.forEach((q) => {
        q.addEventListener("click", (e) => {
          if (e.target.classList.contains("Qut")) {
            const about = e.target.parentElement;
            const Icon = e.target.getElementsByTagName("i")[0];
            const A = about.getElementsByTagName("p")[0];
            Icon.classList.toggle("open");
            if (Icon.classList.contains("open")) {
              A.style.display = "flex";
              about.style.height = "150px";
              Icon.style.transform = "rotate(180deg)";
            } else {
              A.style.display = "none";
              about.style.height = "50px";
              Icon.style.transform = "rotate(0deg)";
            }
          } else {
            const about = e.target.parentElement.parentElement;
            const Icon = e.target.parentElement.getElementsByTagName("i")[0];
            const A = about.getElementsByTagName("p")[0];
            console.log(Icon);
            Icon.classList.toggle("open");
            if (Icon.classList.contains("open")) {
